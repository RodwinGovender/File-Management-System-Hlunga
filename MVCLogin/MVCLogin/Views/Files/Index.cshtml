@model IEnumerable<MVCLogin.Models.Files>

@{
    ViewBag.Title = "All Entries";
}

    <h2>All Entries</h2>

<p>
    @Html.ActionLink("Create New Entry", "Create")
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <b>Search By:</b>
        @Html.RadioButton("searchBy", "Reference", true) <text>Reference</text>
        @Html.RadioButton("searchBy", "Attorney") <text>Attorney</text>
        @Html.RadioButton("searchBy", "ClaimentName") <text>Claiment Name</text>
        @Html.RadioButton("searchBy", "ClaimentSurname") <text>Claiment Surname</text>
        @Html.RadioButton("searchBy", "ClaimentID") <text>Incident Type</text>


        <br />

        @Html.TextBox("search") <input type="submit" value="search" />
    </div>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Reference)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attorney)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClaimentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClaimentSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClaimentID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Reference)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attorney)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClaimentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClaimentSurname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClaimentID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.No }) |
            @Html.ActionLink("Details", "Details", new { id=item.No }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.No })
        </td>
    </tr>
}

</table>
